<%= form_for @forum do |f| %>
	<% if @forum.errors.any? %>
		<h2><%= pluralize(@forum.errors.count, "error") %> prevented this forum from saving:</h2>
		<ul>
			<% @forum.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :title %><br>
	<%= f.text_field :title %>

	<br>
	<br>

	<%= f.label :content, "Write your article here" %><br>
	<%= f.cktext_area :content %>

	<br>
	<br>

	<%= f.submit %>

<% end %>